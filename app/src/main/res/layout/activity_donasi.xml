<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEBE6"
    tools:context="com.example.user.matapp.Donasi">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        android:background="@color/waranku"
        android:titleTextColor="@color/putih"
        app:titleTextColor="@color/putih"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="25dp"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:orientation="horizontal"
        android:padding="10dp"
        android:id="@+id/linearlay_koinmu"
        >

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/coins"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical|right"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5,000"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearlay_koinmu"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:id="@+id/alatbantupenglihatan"
        >
        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/donasi_1"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/coins"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="38,500"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="16dp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="75dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Alat bantu penglihatan"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/duaItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/alatbantupenglihatan"

        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearlay_koinmu"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/donasi_2"
                android:layout_gravity="center_horizontal"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/coins"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20,000"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="77dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="Pengobatan Mata"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearlay_koinmu"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_weight="1"

            >
            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/donasi_3"
                android:layout_gravity="center_horizontal"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/coins"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="115,000"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="75dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="Operasi Mata"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/duaItem"
        android:background="#4EC1EA"
        android:text="Lihat Daftar Yayasan"
        android:textAllCaps="false"
        android:textColor="@color/putih"
        android:id="@+id/bt_lihatdaftaryayasan"
        />
    
    <Button
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/bt_lihatdaftaryayasan"
        android:background="#4EC1EA"
        android:text="Rekomendasikan Yayasan"
        android:textAllCaps="false"
        android:textColor="@color/putih"

        />


</RelativeLayout>
